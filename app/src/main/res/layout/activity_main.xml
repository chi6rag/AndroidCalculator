<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000" >

    <LinearLayout
        android:id="@+id/mainDisplay"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="#000" >

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:text="x"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:background="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp" >

        <!-- scientificKeyboardOne-->
        <LinearLayout
            android:id="@+id/scientificKeyboardOne"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginRight="2dp" >

            <Button
                android:text="sin"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="cos"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="tan"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="pi"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="!"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

        </LinearLayout>
        <!-- /scientificKeyboardOne -->

        <!-- scientificKeyboardTwo -->
        <LinearLayout
            android:id="@+id/scientificKeyboardTwo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginRight="30dp" >

            <Button
                android:text="ln"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="log"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="e"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="^"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

            <Button
                android:text="sq-root"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#272727"
                android:layout_marginBottom="2dp"
                android:textColor="#fff" />

        </LinearLayout>
        <!-- /scientificKeyboardTwo -->

        <LinearLayout
            android:id="@+id/standardKeyboard"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="21"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/standardKeyboardRowOne"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <Button
                    android:text="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="รท"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text=")"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/standardKeyboardRowTwo"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <Button
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="X"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

                <Button
                    android:text="("
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#fff"
                    android:background="#494949" />

            </LinearLayout>

            <!-- standardKeyboard_RowThreeFourWrapper -->
            <LinearLayout
                android:id="@+id/standardKeyboard_RowThreeFourWrapper"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:orientation="horizontal" >

                <!-- standardKeyboardRowThreeFour -->
                <LinearLayout
                    android:id="@+id/standardKeyboardRowThreeFour"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <!-- standardKeyboardRowThree -->
                    <LinearLayout
                        android:id="@+id/standardKeyboardRowThree"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal" >

                        <Button
                            android:text="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="#fff"
                            android:background="#494949" />

                        <Button
                            android:text="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="#fff"
                            android:background="#494949" />

                        <Button
                            android:text="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="#fff"
                            android:background="#494949" />

                        <Button
                            android:text="-"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="#fff"
                            android:background="#494949" />

                    </LinearLayout>
                    <!-- standardKeyboardRowThree -->

                    <!-- standardKeyboardRowFour -->
                    <LinearLayout
                        android:id="@+id/standardKeyboardRowFour"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/button_zero"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <Button
                                android:text="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="0dp"
                                android:textColor="#fff"
                                android:background="#494949" />

                        </LinearLayout>

                        <Button
                            android:text="."
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="0dp"
                            android:textColor="#fff"
                            android:background="#494949" />

                        <Button
                            android:text="+"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="#fff"
                            android:background="#494949" />

                    </LinearLayout>
                    <!-- standardKeyboardRowFour -->

                </LinearLayout>
                <!-- standardKeyboardRowThreeFour -->

                <LinearLayout
                    android:id="@+id/equals_to_wrapper"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" >

                    <Button
                        android:text="="
                        android:id="@+id/button_equals_to"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#494949"
                        android:textColor="#fff" />

                </LinearLayout>

            </LinearLayout>
            <!-- /standardKeyboard_RowThreeFourWrapper -->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>