<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000" >

    <LinearLayout
        android:id="@+id/digitalDisplay"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        style="@style/digitalDisplay">

        <TextView
            android:id="@+id/digitalDisplayText"
            android:text="0"
            android:textColor="#FFF"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            style="@style/digitalDisplayText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="#47565A">

        <LinearLayout
            android:id="@+id/rowOne"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/buttonSeven"
                android:text="7"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonEight"
                android:text="8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonNine"
                android:text="9"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonDivide"
                android:text="รท"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardSpecial" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowTwo"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonFour"
                android:text="4"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonFive"
                android:text="5"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonSix"
                android:text="6"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonMultiply"
                android:text="X"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardSpecial" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowThree"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonOne"
                android:text="1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonTwo"
                android:text="2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonThree"
                android:text="3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonMinus"
                android:text="-"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardSpecial" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowFour"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonZero"
                android:text="0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonDot"
                android:text="."
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardStandard" />

            <Button
                android:id="@+id/buttonEquals"
                android:text="="
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardSpecial" />

            <Button
                android:id="@+id/buttonPlus"
                android:text="+"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/keyboardSpecial" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>