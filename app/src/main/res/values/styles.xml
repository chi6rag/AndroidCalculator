<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="digitalDisplay">
        <item name="android:background">#000</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="digitalDisplayClearScreen">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="digitalDisplayText">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="keyboardStandard">
        <item name="android:background">#D7D8DA</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">0.1dp</item>
    </style>

    <style name="keyboardSpecial" parent="@style/keyboardStandard">
        <item name="android:background">#FE8A19</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
